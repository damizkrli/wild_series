{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-dark" href="{{ path('episode_index') }}">Back to list</a>

    <a class="btn btn-outline-dark" href="{{ path('episode_edit', {'slug': episode.slug}) }}">Edit</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
